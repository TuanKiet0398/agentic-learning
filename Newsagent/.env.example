# News Agent Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (Required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# NewsAPI Key (Optional but recommended)
# Get your free key from: https://newsapi.org/register
NEWSAPI_KEY=your-newsapi-key-here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# News Fetcher Settings
DEFAULT_LANGUAGE=en
DEFAULT_COUNTRY=us
MAX_ARTICLES_PER_TOPIC=50

# Default Topics (comma-separated)
DEFAULT_TOPICS=technology,AI,machine learning,climate change

# Report Settings
REPORT_FORMAT=markdown
OUTPUT_DIRECTORY=reports

# Autonomous Mode Settings
AUTONOMOUS_INTERVAL_HOURS=24
AUTONOMOUS_ITERATIONS=1

# Logging
LOG_LEVEL=INFO
